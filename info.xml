<?xml version="1.0"?>
<extension key="io.compuco.activitynotificationrestrictions" type="module">
  <file>activitynotificationrestrictions</file>
  <name>ActivityNotificationRestrictions</name>
  <description>Allow administrators to restrict which contacts will receive an email notification when an activity is assigned to a contact</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Compuco</author>
    <email>hello@compuco.io</email>
  </maintainer>
  <urls>
    <url desc="Documentation">https://github.com/compucorp/io.compuco.activitynotificationrestrictions/blob/master/README.md</url>
  </urls>
  <releaseDate>2023-06-06</releaseDate>
  <version>1.0.0-alpha</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.51</ver>
  </compatibility>
  <comments>
    Supported CiviCRM versions  :
    - A patched version of CiviCRM 5.51.3, which can be found here: https://github.com/compucorp/civicrm-core/releases
  </comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Activitynotificationrestrictions</namespace>
    <format>22.05.2</format>
    <angularModule>crmActivitynotificationrestrictions</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
  </mixins>
</extension>
